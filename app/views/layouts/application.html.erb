<!DOCTYPE html>
<html>
  <head>
    <title>Chat app</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <h1>Chat app</h1>
    <div id="notice"><%= notice %></div>
    <%= yield %>

    <% if signed_in? %>
      <hr />
      <%= current_user.email %> |
      <%= link_to "Sign out", session_destroy_path(1) %>
    <% end %>
  </body>
</html>
